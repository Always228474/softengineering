        }

        @keyframes changeBackground {
            0% { background-color: #ff5733; }
            25% { background-color: #33ff57; }
            50% { background-color: #3357ff; }
            75% { background-color: #ff33a8; }
            100% { background-color: #ff5733; }
        }

        /* Ensure the map is visible */
        #map {
            width: 100%;
            height: 500px;
            margin: 20px auto;
            border-radius: 10px;
